<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="ðŸ›’ Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ðŸ”¢Somar" Clicked="ToolbarItem_Clicked_1" /> <!-- Agenda 4 -->
        <ToolbarItem Text="âž•Adicionar" Clicked="ToolbarItem_Clicked"/> <!-- Agenda 3 -->
        <ToolbarItem Text="ðŸ“šRelatorio" Clicked="ToolbarItem_Clicked_Relatorio"/> <!-- Agenda 6: BotÃ£o RelatÃ³rio -->
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>

        <!-- Agenda 4: Barra de Busca -->
        <SearchBar x:Name="txt_search"
                   Margin="10,0,10,5"
                   Placeholder="Busca de Produtos"
                   TextChanged="txt_search_TextChanged"/>

        <!-- Frame que envolve a lista -->
        <Frame Padding="0" Margin="10" VerticalOptions="FillAndExpand">

            <!-- Agenda 4: ListView com ContextActions e atualizaÃ§Ã£o -->
            <ListView x:Name="lst_produtos"
                      VerticalOptions="FillAndExpand"
                      IsPullToRefreshEnabled="True"
                      Refreshing="lst_produtos_Refreshing"
                      ItemSelected="lst_produtos_ItemSelected">

                <!-- Agenda 4: Grid de cabeÃ§alho criado -->
                <ListView.Header>
                    <Grid ColumnDefinitions="30, 100,100, 80, 50, 90"
                          BackgroundColor="{StaticResource Gray100}">
                        <Label Grid.Column="0" Text="ID" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="DescriÃ§Ã£o" FontAttributes="Bold"  />
                        <Label Grid.Column="2" Text="Categoria" FontAttributes="Bold"  /> <!-- Agenda 6: Adicionado o campo Categoria -->
                        <Label Grid.Column="3" Text="PreÃ§o" FontAttributes="Bold" />
                        <Label Grid.Column="4" Text="Qnt" FontAttributes="Bold" />
                        <Label Grid.Column="5" Text="Total" FontAttributes="Bold" />
                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <!-- Agenda 5: ContextActions (menu Editar e Remover) -->
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover" 
                                          Clicked="MenuItem_Clicked" 
                                          IsDestructive="True" />
                            </ViewCell.ContextActions>

                            <!-- Agenda 4: Estrutura da Grid de dados -->
                            <Grid ColumnDefinitions="30, 100,100, 80, 50, 90">
                                <Label Grid.Column="0" Text="{Binding Id}" Padding="5" />
                                <Label Grid.Column="1" Text="{Binding Descricao}" />
                                <Label Grid.Column="2" Text="{Binding Categoria}" /> <!-- Agenda 6: Coluna Categoria adicionada -->
                                <Label Grid.Column="3" Text="{Binding Preco, StringFormat='{}{0:c}'}" />
                                <Label Grid.Column="4" Text="{Binding Quantidade}" />
                                <Label Grid.Column="5" Text="{Binding Total, StringFormat='{}{0:c}'}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Frame>

    </StackLayout>
</ContentPage>
